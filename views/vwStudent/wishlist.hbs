<div style="display: flex;  margin-top: 30px; margin-left: 30px; ">
    <div style="width: 75%; " >
        <div style="font-size: 30px;font-weight: bolder; margin-bottom: 30px;">List of course wishlist</div>
        <div style="display: flex; ">
           
            {{#if empty}}
                <h3>Empty List</h3>
            {{else}}
                {{#each paycourse }}
                <div style="display: inline-block;">
                    <div class="col-2 m-3">
                        <a href="/api/accounts/courseDetail/{{id_course}}" class="card m-2"
                            style="width: 15rem; height: 18rem; cursor: pointer;" type="submit">
                            <img class="card-img-top" src="/{{avatar_course}}" alt="Card image cap">
                            <div class="card-body">
                                <h4 class="card-title" style="font-size: medium;">{{name_course}} </h4>
                                <div class="row">
                                    <div class="col">
                                        <form action="/api/students/remove/{{../userid.id_account}}" method="post">
                                            <input type="hidden" name="id_course" value="{{id_course}}">
                                            <button class="btn btn-sm " type="submit">Remove</button>
                                        </form>
                
                                    </div>
                                    <div class="col">
                                        <div class="d-flex justify-content-between">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                {{/each}}
            {{/if}}
            
        </div>
   
    </div>

